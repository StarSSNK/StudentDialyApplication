<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2deff">

    <ScrollView
        android:layout_width="363dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/add_new"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ed_title_t"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="8dp"
                    android:background="#50ffffff"
                    android:gravity="center"
                    android:text="Title"
                    android:textSize="24dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select type"
                    android:textSize="20dp" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/ed_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:ms_arrow_tint="#5effec"
                    app:ms_background_color="#ffddde"
                    app:ms_text_color="@android:color/black" />

                <EditText
                    android:id="@+id/ed_detail_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Fill Detail"
                    android:textSize="20dp" />


                <AutoCompleteTextView
                    android:id="@+id/ed_sl_classroom"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:hint="select classroom"
                    android:textSize="20dp" />


                <LinearLayout
                    android:id="@+id/sl_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/etBg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ed_sl_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:hint="select due date"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/ed_sl_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="and time"
                        android:textSize="20dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="select User define time"
                    android:textSize="20dp" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/ed_udt_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:ms_arrow_tint="#5effec"
                    app:ms_background_color="#ffe7e7"
                    app:ms_text_color="@android:color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/cancle_edit_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="5"
                        android:background="#eab4b4"
                        android:hint="Cancle"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/submit_edit_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="#dcffc1"
                        android:hint="Submit"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>