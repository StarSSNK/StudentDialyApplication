<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".Activity.Profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:id="@+id/back"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            app:civ_border_color="#ffffff"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/uploadPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:hint="Upload Picture"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tvBg"
            android:gravity="center_horizontal"
            android:hint="My Profile"
            android:inputType="text"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fac8c8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/etBg2"
                    android:gravity="center"
                    android:hint="Username : "
                    android:padding="5dp"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/show_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/etBg2"
                    android:padding="5dp"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="132dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/etBg2"
                    android:gravity="center"
                    android:hint="Email : "
                    android:padding="5dp"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/show_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/etBg2"
                    android:padding="5dp"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/chang_pass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|bottom"
            android:hint="Change your Password"
            android:textSize="20dp" />


        <ImageButton
            android:id="@+id/log_out_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/power"
            android:hint="Log out" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>